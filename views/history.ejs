<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>History</title>
</head>
<body>
    <style>
        body {
            height: 100vh;
            background: url(/images/18.jpg) no-repeat center center fixed;
            background-size: cover;
        }
    </style>
    <%- include('navbar') %>
    
    <div class="container mt-5 p-4 text-light">
        <h1 class="text-center mb-4">User Interaction History</h1>
        <h2 class="text-center mb-4">Welcome, <%= username %>!</h2>

        <!-- General History Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Action</th>
                        <th>User Input</th>
                        <th>Date</th>
                        <th>Results</th>
                    </tr>
                </thead>
                <tbody>
                    <% history.forEach(item => { %>
                        <tr>
                            <td><%= item.action %></td>
                            <td><%= item.input || "N/A" %></td> <!-- Show user search input -->
                            <td><%= new Date(item.date).toLocaleString() %></td>
                            <td>
                                <% if (item.results && item.results.length > 0) { %>
                                    <ul>
                                        <% item.results.forEach(result => { %>
                                            <li>
                                                <strong>Title:</strong> 
                                                <a href="<%= result.url %>" target="_blank"><%= result.title %></a><br>
                                                <strong>Description:</strong> <%= result.description || "No description available" %><br>
                                                <strong>Published At:</strong> <%= new Date(result.publishedAt).toLocaleString() %>
                                            </li>
                                        <% }) %>
                                    </ul>
                                <% } else { %>
                                    No results found for this action.
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>                
            </table>
        </div>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</body>
</html>
