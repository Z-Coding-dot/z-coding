<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/styles.css" />
    <title>Login</title>
  </head>
  <body style="background-color: #242131; color: #ae86ff">
    <%- include('navbar') %>
    <div class="container mt-5 mb-5">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-6 mb-5">
          <div
            class="card mb-5"
            style="
              background-color: transparent;
              color: #ae86ff;
              box-shadow: 5px 7px 10px #483376;
            "
          >
            <div class="card-header text-center">
              <h1>Login</h1>
            </div>
            <div class="card-body">
                <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-danger" role="alert" style="border: none; padding: 0; background: none;font-size: 24px; color: red;">
                  <%= errorMessage %>
                </div>
                <% } %>
                <!-- Login Form -->
                <form action="/login" method="POST">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                  type="text"
                  id="username"
                  name="username"
                  class="form-control"
                  required
                  />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  required
                  />
                </div>
                <button
                  type="submit"
                  class="btn w-100 text-light mt"
                  style="background: #8b87ff"
                >
                  Login
                </button>
                </form>
                <p class="mt-3 mb-5 text-center">
                Don't have an account?
                <a href="/signup" class="text-primary">Sign up here</a>
                </p>
              </div>
              </div>
            </div>
            </div>
          </div>
          <%- include('footer') %>

          <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
          />
          </body>
        </html>
